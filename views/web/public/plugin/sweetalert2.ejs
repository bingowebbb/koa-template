<%# 简单的消息提醒_%>
<link href="https://cdn.bootcss.com/limonte-sweetalert2/7.15.0/sweetalert2.min.css" rel="stylesheet">
<script src="https://cdn.bootcss.com/limonte-sweetalert2/7.15.0/sweetalert2.all.min.js"></script>
<script>
  var swal_error = function(title){
    swal({
      timer: 1500, toast: true, type: 'error',
      title: title || '未知错误',
      position: 'top-start', showConfirmButton: false
    })
  };
var swal_success = function(title){
  swal({
    timer: 1500, toast: true, type: 'success',
    title: title || '提交成功啦！', position: 'top-start',
    showConfirmButton: false
  });
}
var swal_warning = function(title){
  swal({
    timer: 1500, toast: true, type: 'warning',
    title: title || '未知警告',
    position: 'top-start', showConfirmButton: false
  })
};
var swal_confirm = function(arg, next, btnText){
  swal(_.merge({
    position: 'center', type: 'info',
    title: arg.title,
    showCancelButton: arg.cancel,
    confirmButtonColor: '#3085d6',
    confirmButtonText: arg.btnText || '确定',
  }, arg)).then(function(rst) {
    rst.value && next();
  });
};
</script>
