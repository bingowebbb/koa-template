<%- include('public/header') _%>
<div class="container">
  <div class="card w-50 mx-auto" style="margin-top: 100px;">
    <div class="card-header">管理员登陆</div>
    <div class="card-body mx-auto w-100 pt-5 pb-5">
      <form method="POST" class="col-sm-8 mx-auto">
        <div class="form-group row align-items-center">
          <div class="input-group">
            <div class="input-group-prepend">
              <div class="input-group-text text-sm-right" style="width:84px;padding-right:2px">
                <span class="w-100">用户名：</span>
              </div>
            </div>
            <input type="text" class="form-control" name="login_username" id="login_username">
          </div>
        </div>
        <div class="form-group row align-items-center">
          <div class="input-group">
            <div class="input-group-prepend">
              <div class="input-group-text text-sm-right" style="width:84px;padding-right:2px;">
                <span class="w-100">密码：</span>
              </div>
            </div>
            <input type="password" class="form-control" name="login_password" id="login_password">
          </div>
        </div>
        <div class="form-group row">
          <button type="submit" class="btn btn-primary w-100">登  陆</button>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include('public/footer') _%>
